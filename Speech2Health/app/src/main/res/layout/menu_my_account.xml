<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="475dp"
        android:id="@+id/scrollViewMyAccount"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp">

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/relativeLayoutMyAccount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/scrollViewMyAccount">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="My Account"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:id="@+id/textView3"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="46dp"
            android:layout_marginStart="46dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/nameTextViewMyAccount"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:id="@+id/textView7"
            android:layout_below="@+id/nameTextViewMyAccount"
            android:layout_alignLeft="@+id/nameTextViewMyAccount"
            android:layout_alignStart="@+id/nameTextViewMyAccount"
            android:layout_marginTop="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/emailTextViewMyAccount"
            android:layout_below="@+id/textView7"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/currentPasswordEditTextMyAccount"
            android:layout_below="@+id/emailTextViewMyAccount"
            android:layout_alignLeft="@+id/emailTextViewMyAccount"
            android:layout_alignStart="@+id/emailTextViewMyAccount"
            android:layout_marginTop="25dp"
            android:layout_alignRight="@+id/textView2"
            android:layout_alignEnd="@+id/textView2"
            android:hint="Current Password" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/newPasswordEditTextMyAccount"
            android:layout_below="@+id/currentPasswordEditTextMyAccount"
            android:layout_alignLeft="@+id/currentPasswordEditTextMyAccount"
            android:layout_alignStart="@+id/currentPasswordEditTextMyAccount"
            android:layout_alignRight="@+id/textView2"
            android:layout_alignEnd="@+id/textView2"
            android:hint="New Password" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/newPassword2EditTextMyAccount"
            android:layout_below="@+id/newPasswordEditTextMyAccount"
            android:layout_alignLeft="@+id/newPasswordEditTextMyAccount"
            android:layout_alignStart="@+id/newPasswordEditTextMyAccount"
            android:layout_alignRight="@+id/textView2"
            android:layout_alignEnd="@+id/textView2"
            android:hint="New Password" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:id="@+id/changePasswordButtonMyAccount"
            android:layout_below="@+id/newPassword2EditTextMyAccount"
            android:layout_alignLeft="@+id/newPassword2EditTextMyAccount"
            android:layout_alignStart="@+id/newPassword2EditTextMyAccount"/>

    </RelativeLayout>

</RelativeLayout>